<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showInfoUser">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="637dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="334dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/profile_user4"/>

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="25dp"
            android:text="Aca debe ir el nombre"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="17dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/mail_color"/>

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="aca debe ir el correo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="2"
                app:srcCompat="@drawable/baby_color"/>

            <TextView
                android:id="@+id/date_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="aca debe ir la fecha"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="2"
                app:srcCompat="@drawable/australia_color" />

            <TextView
                android:id="@+id/country_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Aca debe ir laa ciudad"
                android:textSize="16dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_go_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_registrarse"
            android:backgroundTint="@color/colorPrincipalApp"
            android:text="Inicion" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>